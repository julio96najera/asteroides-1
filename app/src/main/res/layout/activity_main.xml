<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.allg.asteroides.activity.MainActivity"
    android:keepScreenOn="true"
    android:background="@drawable/background_menu">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Start"
        android:onClick="start"
        android:nestedScrollingEnabled="false"
        style="@style/AppTheme"
        android:background="@drawable/ic_start"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Creditos"
        android:onClick="credits"
        android:background="@drawable/ic_creditos"
        android:layout_below="@+id/Start"
        android:layout_alignRight="@+id/Start"
        android:layout_alignEnd="@+id/Start" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Opcoes"
        android:background="@drawable/ic_opcoes"
        android:onClick="opcoes"
        android:layout_below="@+id/Creditos"
        android:layout_alignLeft="@+id/Creditos"
        android:layout_alignStart="@+id/Creditos" />

</RelativeLayout>
